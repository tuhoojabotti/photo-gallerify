{
    "name": "__MSG_ExtensionName__",
    "description": "__MSG_ExtensionDesc__",
    "version": "1.1",
    "manifest_version": 2,
    "default_locale": "en",
    "homepage_url": "http://tuhoojabotti.com",
    "minimum_chrome_version": "25",
    "permissions": ["<all_urls>", "tabs"],
    "icons": {
        "512": "gfx/512.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "19": "gfx/19.png",
            "38": "gfx/38.png",
            "512": "gfx/512.png"
        },
        "default_title": "__MSG_Gallerify__"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "ftp://*/*"],
            "js": ["lib/jquery.js", "lib/masonry.js", "detectors.js", "content.js"],
            "css": ["gallery.css"],
            "run_at" : "document_end",
            "all_frames" : false
        }
    ]
}